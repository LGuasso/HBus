<?xml version="1.0" encoding="utf-8"?>
<resources>


        <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
                <!-- MaterialDrawer specific values -->
                <item name="material_drawer_background">@color/material_drawer_background</item>
                <item name="material_drawer_icons">@color/material_drawer_icons</item>
                <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
                <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
                <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
                <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
                <item name="material_drawer_divider">@color/material_drawer_divider</item>
                <item name="material_drawer_selected">@color/material_drawer_selected</item>
                <item name="material_drawer_selected_text">@color/material_drawer_selected_text
                </item>
                <item name="material_drawer_header_selection_text">
                        @color/material_drawer_header_selection_text
                </item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="android:navigationBarColor">@color/colorPrimary</item>
                <item name="android:toolbarStyle">@style/AppTheme.DarkActionBar</item>
                <item name="android:actionBarStyle">@style/AppTheme.DarkActionBar</item>
                <item name="android:colorForeground">@color/switch_thumb_normal_material_dark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="android:colorBackground">@android:color/background_light</item>
                <item name="android:colorPrimary">@color/colorPrimary</item>
                <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="android:colorAccent">@color/colorAccent</item>
        </style>

        <style name="AppTheme.DarkActionBar" parent="@android:style/Widget.Material.ActionBar">
                <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="android:colorPrimary">@color/colorPrimary</item>
                <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        </style>

        <style name="AppTheme.ToolBar" parent="Widget.Design.CollapsingToolbar">
                <item name="android:subtitleTextColor">@color/colorAccent</item>
                <item name="android:titleTextColor">@color/white</item>
        </style>
</resources>