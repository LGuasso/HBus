<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" >
        <shape>
            <solid
                android:color="@color/colorAccent" />
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark" />
            <corners
                android:radius="16dp" />
            <padding
                android:left="16dp"
                android:top="4dp"
                android:right="16dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape>
            <solid
                android:color="@color/colorPrimaryMoreDark" />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimaryDark" />
            <corners
                android:radius="16dp" />
            <padding
                android:left="16dp"
                android:top="4dp"
                android:right="16dp"
                android:bottom="4dp" />
        </shape>
    </item>
</selector>