<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false" >
        <shape>
            <solid
                android:color="@color/colorPrimary" />
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape>
            <solid
                android:color="@color/colorPrimaryLight" />
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>