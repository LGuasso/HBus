<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <bitmap android:src="@drawable/ic_checkbox_marked_circle_white_24dp"/>
    </item>
    <item android:state_selected="false" >
        <bitmap android:src="@drawable/ic_checkbox_blank_circle_outline_white_24dp"/>
    </item>
    <item android:state_enabled="false" >
        <color android:color="@android:color/tertiary_text_dark"/>
    </item>
    <item android:state_enabled="true" >
        <color android:color="@color/accent"/>
    </item>
</selector>