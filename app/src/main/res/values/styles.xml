<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- item name="android:actionBarStyle">@style/ActionBarOrange</item>
        <item name="android:textAppearance">@style/Text</item -->
        <!--item name="android:buttonStyle">@style/ButtonAppTheme</item-->
        <!--item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item-->

        <!-- Support library compatibility -->
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <!--item name="buttonStyle">@style/ButtonAppTheme</item-->
        <item name="android:windowBackground">@color/md_grey_100</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBarTabStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_blue</item>
    </style>

    <style name="Text" parent="@style/TextAppearance.AppCompat.Large">
        <!-- Support library compatibility -->

    </style>


    <style name="AppTheme.Button.Borderless.Colored" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button.Flat</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Base.Widget.AppCompat.Button.Colored" parent="@style/Base.Widget.AppCompat.Button.Colored">
        <item name="android:minHeight">36dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button.Flat</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:shadowColor">@color/cardview_shadow_start_color</item>
    </style>


    <!-- POPUP WINDOW -->
    <style name="PopupWindow">
        <item name="android:windowEnterAnimation">@animator/fade_in</item>
        <item name="android:windowExitAnimation">@animator/fade_out</item>
    </style>


</resources>