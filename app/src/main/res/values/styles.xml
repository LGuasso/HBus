<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
       <item name="android:actionBarStyle">@style/ActionBarOrange</item>
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <!-- Support library compatibility -->
       <item name="actionBarStyle">@style/ActionBarOrange</item>
        <item name="buttonStyle">@style/ButtonAppTheme</item>


    </style>

    <style name="ActionBarOrange" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/orange_light</item>
        <!-- Support library compatibility -->
        <item name="background">@color/orange_light</item>
        <item name="android:actionBarItemBackground">@color/black</item>
    </style>

    <style name="Text" parent="@style/TextAppearance.AppCompat.Large">
        <!-- Support library compatibility -->
    </style>

    <style name="ButtonAppTheme" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="background">@drawable/orange_button</item>
    </style>
</resources>
