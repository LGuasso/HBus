<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listView_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:padding="@dimen/padding_item_bus">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/next_bus"
            android:textAppearance="?android:textAppearanceButton"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Primeiro layout com quadrado que tem as horas-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Texto que exibe horário do ônibus -->
            <TextView
                android:id="@+id/item_list_textview_horario"
                android:textColor="@color/white"
                style="@style/ItemBusTime" />

        </LinearLayout>

        <!-- Segundo Layout com o resto de informações -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/item_list_textview_codigo"
                style="@style/ItemBusCode"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/item_list_textview_descricao_do_codigo"
                style="@style/ItemBusCodeDescription"
                android:textColor="@color/md_white_1000" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_list_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:padding="16dp"
            android:src="@drawable/ic_alarm_plus_white_24dp" />

    </LinearLayout>


</LinearLayout>




