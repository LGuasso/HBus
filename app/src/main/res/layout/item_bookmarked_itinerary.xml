<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/listView_background_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout_background_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"

            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewItineraryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/itinerary_name"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/textViewCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_alignParentLeft="true"
                android:text="@string/company_use"
                android:textAppearance="?android:textAppearanceSmall" />







            <LinearLayout
                android:id="@+id/linearLayoutHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/textViewLastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/loading"
                android:textAppearance="?android:textAppearanceSmall" />
            <!--TextView
                android:id="@+id/linear_layout_nextbuses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:textAppearance="@style/AppTheme.SubTitleItinerary"/-->

        </LinearLayout>

        <!--View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright"/-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/buttonLookTime"
                        android:layout_width="wrap_content"
                        android:theme="@style/HBusTheme.Widget.AppCompat.Button.Colored.BookmarkedItinerary"
                        android:layout_height="wrap_content"
                        android:text="@string/view_timetable"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/buttonRemove"
                        android:theme="@style/HBusTheme.Widget.AppCompat.Button.Colored.BookmarkedItinerary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_remove"/>
                </LinearLayout>

            </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>