<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.expressobits.hbus.ui.fragments.HoursFragment">

    <android.support.v7.widget.RecyclerView
        android:id = "@+id/rv_listline_line"
        android:scrollbars = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:visibility="invisible"/>


    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bus_grey600_48dp"
            android:layout_gravity="center"
            android:contentDescription="@string/no_have_bus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/no_have_bus"/>

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:visibility="visible"/>

</RelativeLayout>
