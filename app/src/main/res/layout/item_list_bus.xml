<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/listView_background"
    android:padding="5dp">




    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_list_textview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="10:00"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/item_list_textview_ultimo"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/red"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:ellipsize="marquee"
                android:textColorHighlight="#FFFFFF"
                android:text="Exemplo de markeee rolando na tela com dicas, truques e muito mais!!!"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="14sp"
                android:textAlignment="center"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="5dp"
                android:focusable="false"/>


            <TextView
                android:id="@+id/item_list_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/background_full_dark"
                android:text="155A"
                android:typeface="monospace" />

            </LinearLayout>


        <TextView
            android:id="@+id/item_list_textview_codigo"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:lines="1"
            android:textColor="@color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:background="@color/orange_light"
            android:textColorHighlight="#FFFFFF"
            android:text="Exemplo de markeee rolando na tela com dicas, truques e muito mais!!!"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="14sp"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="5dp"
            android:focusable="false"
            android:singleLine="true" />

    </LinearLayout>

    <!--ImageView
        android:id="@+id/item_list_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/ -->




    </LinearLayout>


