<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/listView_background"
    android:padding="15dp">

    <!-- Primeiro layout com quadrado que tem as horas-->
    <LinearLayout
        android:id="@+id/linear_layout_list_bus_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_default">

        <!-- TODO implementar diferentes cores -->
        <!-- Texto que exibe horário do ônibus -->
        <TextView
            android:id="@+id/item_list_textview_horario"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="@dimen/horario_textsize"
            android:text="10:00"
            android:typeface="sans" />

    </LinearLayout>

    <!-- Segundo Layout com o resto de informações -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"

        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/item_list_textview_codigo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="@color/accent_color_default"
            android:text="155A"
            android:textAlignment="center"
            android:typeface="sans" />
        <TextView
            android:id="@+id/item_list_textview_tempo_faltando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Caption"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="20dp"
            android:focusable="false"
            android:lines="1"/>


        <TextView
            android:id="@+id/item_list_textview_descricao_do_codigo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:lines="1"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:ellipsize="marquee"

            android:textColorHighlight="#FFFFFF"
            android:text="Exemplo de markeee rolando na tela com dicas, truques e muito mais!!!"
            android:marqueeRepeatLimit="marquee_forever"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="20dp"
            android:focusable="false"
            android:singleLine="true" />

    </LinearLayout>

    <!-- TODO fazer imagem dos favoritos -->
    <!--ImageView
        android:id="@+id/item_list_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/ -->

    </LinearLayout>


