<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.expressobits.hbus.ui.help.FeedbackActivity"
    tools:showIn="@layout/activity_feedback"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/linear_layout_send_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:clickable="true">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_help_circle_white_48dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="center"
                android:text="@string/send_your_feedback_to_expressobits"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_the_type_of_feedback"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:entries="@array/list_feedbacks"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_feedback"
                android:lines="@integer/max_lines_feedback"
                android:maxLines="@integer/max_lines_feedback"
                android:singleLine="false"
                android:maxLength="@integer/max_length_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_your_feedback_here"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkbox_feedback_includes_system_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/include_system_information"/>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>